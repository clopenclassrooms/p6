{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
    <div class="alert alert-danger">Erreur d'authentification</div>
{% endif %}
    <div class="registerContainer text-center d-flex flex-column justify-content-center">
        <h1 class="mb-5">S'identifier</h1>
        <div class="w-100 d-flex flex-row justify-content-center">
            <div class="registerInputContainer p-3 justify-content-center text-center">
                {{ form_start(form) }}
                    <div class="m-3">
                    {{ form_row(form.username) }}
                    </div>
                    <div class="m-3">
                    {{ form_row(form.password) }}
                    </div>
                    <button type="submit" class="btn btn-primary m-2">S'identifier</button>
                {{ form_end(form) }}
                <div><a href="{{ path('app_register')}}">Créer un compte</a></div>
                <div><a href="{{ path('app_forgot_password_request')}}">Mot de passe oublié?</a></div>
            </div>
        </div>
    </div>


{% endblock %}